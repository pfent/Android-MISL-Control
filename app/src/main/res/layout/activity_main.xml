<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/model3dContainer"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:padding="5dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:padding="5dp">

            <FrameLayout
                android:id="@+id/mapContainer"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true" />

            <FrameLayout
                android:id="@+id/controlContainer"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="6dp">
        <TextView
            android:layout_width="wrap_content" android:textColor="#FF0000"
            android:layout_height="wrap_content" android:text="EulerX: " />
        <TextView
            android:layout_width="wrap_content" android:textColor="#FF0000"
            android:layout_height="wrap_content" android:id="@+id/textViewEulerX" android:text="-"
            android:textSize="14pt" />
        <TextView
            android:layout_width="wrap_content" android:textColor="#FF0000"
            android:layout_height="wrap_content" android:text="EulerY: " />
        <TextView
            android:layout_width="wrap_content" android:textColor="#FF0000"
            android:layout_height="wrap_content" android:id="@+id/textViewEulerY" android:text="-"
            android:textSize="14pt"/>
        <TextView
            android:layout_width="wrap_content" android:textColor="#FF0000"
            android:layout_height="wrap_content" android:text="EulerZ: " />
        <TextView
            android:layout_width="wrap_content" android:textColor="#FF0000"
            android:layout_height="wrap_content" android:id="@+id/textViewEulerZ" android:text="123"
            android:textSize="14pt"/>
    </LinearLayout>
</RelativeLayout>


